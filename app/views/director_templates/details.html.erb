<h1> Director #<%=@the_director.id %> details </h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%= @the_director.id%>" class="btn btn-block btn-outline-secondary">
  Delete director
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
   <%= @the_director.name %> 
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
   <%= @the_director.dob %> 
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_director.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.updated_at) %> ago
  </dd>
</dl>

<h1>  Filmography  </h1>

<table border="1" >

    <tr>
        <th> ID </th>
        <th> Image </th>
        <th> Title </th>
        <th> Year </th>
        <th> Director </th>
        <th>        </th>
    </tr>

  <% @the_movies_array.each do |a_movie| %>
    <tr>
      <td> <%= a_movie.id %> </td>
      <td> <img src = "<%= a_movie.image %>" style="width:250px;"> </td>
      <td> <%= a_movie.title %> </td>
      <td> <%= a_movie.year %> </td>
      <td> 
        <% d = Director.where({:id => a_movie.director_id}).at(0) %> 
        <%= d.name %>
      </td>
      <td> <a href="/movies/<%= a_movie.id %>"> Show details </a>
    </tr>
  <% end %>

</table>
